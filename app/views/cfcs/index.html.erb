	<h1 class='page-title'>Continuous Futures Contracts</h1>
	<%= paginate @contents if !params[:all] %><br>
	<table>
		<tr>
			<th>
				Dataset Code
			</th>
			<th>
				Name
			</th>
			<th>
				Description
			</th>
			<th>
				Data URL
			</th>
		</tr>
		<% for c in @contents %>
		<tr>
			<% the_ticker = c.asset.symbol + c.depth.to_s %>
			<td>FUTURE.<%= the_ticker %></td>
			<% if c.depth == 1 %>
				<% the_name = c.asset.name.to_s + ' Futures, Continuous Contract #' + c.depth.to_s + ' (' + the_ticker + ') (Front Month)' %>
			<% else %>
				<% the_name = c.asset.name.to_s + ' Futures, Continuous Contract #' + c.depth.to_s + ' (' + the_ticker + ')' %>
			<% end %>
			<td><%= the_name %></td>
			<td><%= c.asset.name.to_s + ' Futures, Continuous Contract #' + c.depth.to_s + '. Non-adjusted price based on spot-month continuous contract calculations. Raw futures data from ' + Ofdp::Application::EXCHANGE_NAMES[c.asset.exchange] + '.' %></td>
			<td><%= link_to cfc_url(c),cfc_url(c) %></td>
		</tr>
		<% end %>
	</table>
