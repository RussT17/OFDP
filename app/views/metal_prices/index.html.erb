<div class='container'>
	<%= render 'shared/header' %>
<div class='page-content'>
	<h1 class='page-title'>Table of Contents</h1>
	<%= paginate @contents %><br>
	<table border='1'>
		<tr>
			<th>
				Dataset Name
			</th>
			<th>
				Description
			</th>
			<th>
				Data URL
			</th>
		</tr>
		<% for c in @contents %>
		<tr>
			<% if c.metal.source == 'lme' %>
			<td><%= c.metal.name + ' Price: ' + c.name %></td>
			<td><%= "Historical " + c.name.downcase + ' ' + c.metal.name.downcase + ' price, scraped daily from the LME. Prices are given in $USD/Tonne.' %></td>
			<% elsif c.name[0] == 'L' %>
			<td><%= c.metal.name + ' Price: ' + c.name %></td>
			<td><%= c.name + ' ' + c.metal.name.downcase + " price, scraped daily from the LBMA. Fixing levels are set per troy ounce." %></td>
			<% else %>
			<td><%= c.metal.name + ' ' + c.name %></td>
				<% if c.metal.name == 'Gold' %>
				<td><%= "Gold forward rates (GOFO), in percentages, scraped daily from the LBMA. LIBOR difference also included." %></td>
				<% else %>
				<td><%= "Silver forward rates (SIFO), in percentages, scraped daily from the LBMA. These rates are purely indicative and are not intended to be used as benchmarks for any transactions. LIBOR difference also included." %></td>
				<% end %>
			<% end %>
			<td><%= link_to metal_price_url(c),metal_price_url(c) %></td>
		</tr>
		<% end %>
	</table>
</div>
<div class='footer'></div>
</div>