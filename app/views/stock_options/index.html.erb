<h1 class='page-title'>Table of Contents</h1>
	<%= paginate @contents if !params[:all] %><br>
	<table>
		<tr>
			<th>
				Dataset Code
			</th>
			<th>
				Option Name
			</th>
			<th>
				Description
			</th>
			<th>
				Data URL
			</th>
		</tr>
		<% for c in @contents %>
		<tr><% type = c.is_call ? "Call" : "Put" %>
			<td>OPTION.<%= c.symbol %></td>
			<td><%= c.stock.name + ' (' + c.stock.symbol + ') ' + c.expiry_date.strftime("%b %Y") + ' ' + type + ', Strike $' + c.strike_price.to_s %></td>
			<td><%= 'Option daily closing values in $USD. Underlying Asset: ' + c.stock.name + ' (' + 'Symbol: ' + c.stock.symbol + ', Exchange: ' + c.stock.exchange + ', Sector: ' + c.stock.sector + '), ' + 'Expiry Date: ' + c.expiry_date.to_s + ', ' + type + ', Strike Price: $' + c.strike_price.to_s + ', Option Symbol: ' + c.symbol %></td>
			<td><%= link_to stock_option_url(c), stock_option_url(c) %></td>
		</tr>
		<% end %>
	</table>