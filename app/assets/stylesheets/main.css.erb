.main-logo-small {
  background: url("<%= asset_path('logo-ofdp-smallest.png') %>") no-repeat;
  width:200px;
  height:91px;
  margin-left:10px;
  margin-top:0px;
  float:left;
}

html, body {
  height:100%;
}

body {
  font-family:sans-serif;
  color:#111111;
  margin:0;
}

p {
  line-height:1.3em;
}

/* Elements of all pages */

.container {
  width:960px;
  margin-left:auto;
  margin-right:auto;
  background-color:white;
  height:100%;
}

.header {
  background-color:white;
  border-bottom:1px solid #111111;
  margin-top:2px;
  height:94px;
}

.footer {
  background-color:white;
  height:45px;
  width:960px;
  bottom:0px;
  margin-left:auto;
  margin-right:auto;
  position:relative;
  display:block;
  border-top:1px solid #111111;
}

.page-content {
  padding:45px;
  padding-top:15px;
  background-color:white;
  min-height: 100%;
  height: auto !important;
  height:100%;
  margin: 0 auto -3em;
}

.footer, .push {
  height: 3em;
}

h1.page-title {
  margin-bottom:0px;
}

/* Data selectors */

.data-selector {
  width:225px;
  height:110px;
}

.data-selector div.field{
  height:25px;
  width:110px;
  float:left;
}

.data-selector div.selection{
  height:25px;
  width:110px;
  float:right;
}


/* Navbar */
div.navbar{
  height:36px;
  width:800px;
  margin-left:210px;
  padding-top:51px;
}

div.tab{
  height:42px;
  width:115px;
  float:left;
  text-align:center;
  background-color:#abcabc;
  color:black;
  border:1px solid #111111;
  margin-left:20px;
}

div.tab.on{
  background-color:#345345;
  color:white;
}

div.tab div{
  margin-top:11px;
}

div.tab.cfcs-tab{
  width:148px;
}

div.tab.cfcs-tab div{
  margin-top:4px;
}

div.tab.spot-metal-prices-tab div{
  margin-top:4px;
}

table,th,td {
  border: 1px solid #111111;
}