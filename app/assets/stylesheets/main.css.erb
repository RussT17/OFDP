.main-logo-small {
  background: url("<%= asset_path('logo-ofdp-smallest.png') %>") no-repeat;
  width:200px;
  height:91px;
  margin-left:10px;
  margin-top:0px;
  float:left;
}

html, body {
  height:100%;
}

body {
  font-family:sans-serif;
  background-color:#333333;
  margin:0;
}

p {
  line-height:1.3em;
}

/* Elements of all pages */

.container {
  width:960px;
  margin-left:auto;
  margin-right:auto;
  background-color:#eeeeee;
  height:100%;
}

.header {
  background-color:#eeeeee;
  border-bottom:1px solid black;
  height:94px;
}

.footer {
  background-color:#eeeeee;
  height:45px;
  width:960px;
  bottom:0px;
  margin-left:auto;
  margin-right:auto;
  position:relative;
  display:block;
  border-top:1px solid black;
}

.page-content {
  padding:45px;
  padding-top:15px;
  background-color:white;
  min-height:700px;
}

.footer {
  clear:both;
}

h1.page-title {
  margin-bottom:0px;
}

/* Futures data selector */

#futures-data-selection {
  width:225px;
  height:110px;
}

#futures-data-selection div.field{
  height:25px;
  width:110px;
  float:left;
}

#futures-data-selection div.selection{
  height:25px;
  width:110px;
  float:right;
}

/* Navbar */
div.navbar{
  height:36px;
  width:500px;
  margin-left:220px;
  padding-top:57px;
}

div.tab{
  height:36px;
  width:85px;
  float:left;
  text-align:center;
  background-color:#AAAAAA;
  border:1px solid black;
  margin-left:25px;
}

div.tab div{
  margin-top:9px;
}

